// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model LigaModel {
  id         String   @id @map("_id")
  name       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model BetterModel {
  id         String   @id @map("_id")
  name       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model TeamModel {
  id         String   @id @map("_id")
  name       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model GameDayModel {
  id         String   @id @map("_id")
  ligaId     String
  round      Int
  games      Game[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model BetModel {
  id         String   @id @map("_id")
  gameDayId  String
  betterId   String
  scores     Score[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model ResultModel {
  id         String   @id @map("_id")
  gameDayId  String
  scores     Score[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

type Game {
  gameNumber Int
  homeId     String
  awayId     String
}

type Score {
  gameNumber Int
  homeGols   Int
  awayGols   Int
}
